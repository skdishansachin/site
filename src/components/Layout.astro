---
import SpeedInsights from "@vercel/speed-insights/astro"
import "@fontsource/geist-sans"
import "@fontsource/geist-mono"
import Navbar from "./Navbar.astro"

interface Props {
    title: string
    description: string
    ogId?: string
}
---

<html
    lang="en"
    class="dark bg-white text-black dark:bg-[#111010] dark:text-[#fefefe]"
>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <meta name="description" content={Astro.props.description} />
        <meta name="author" content="Dishan Sacin" />

        <title>{Astro.props.title}</title>

        <link rel="preconnect" href="/" crossorigin />
        <link rel="preload" href="/profile.png" as="image" />
        <link rel="icon" href="/profile.png" />

        <link
            rel="alternate"
            type="application/rss+xml"
            title="Dishan Sachin's portfolio"
            href={new URL("rss.xml", Astro.site)}
        />
        <link rel="sitemap" href="/sitemap-index.xml" />

        <!-- OpenGraph tags -->
        <meta name="og:title" content={Astro.props.title} />
        <meta property="og:title" content={Astro.props.title} />
        <meta property="og:type" content="website" />
        <meta property="og:locale" content="en" />
        <meta property="og:description" content={Astro.props.description} />
        <meta property="og:site_name" content="Dishan Sachin" />
        <meta property="og:url" content={Astro.site} />

        <!-- Twitter tags -->
        <meta name="twitter:card" content="summary" />
        <meta name="twitter:site" content="@skdishansachin" />
        <meta name="twitter:title" content={Astro.props.title} />
        <meta name="twitter:description" content={Astro.props.description} />

        <!-- Vercel speed insights -->
        <SpeedInsights />

        <style is:global>
            html.dark .astro-code,
            html.dark .astro-code span {
                color: var(--shiki-dark) !important;
                background-color: var(--shiki-dark-bg) !important;
                /* Optional, if you also want font styles */
                font-style: var(--shiki-dark-font-style) !important;
                font-weight: var(--shiki-dark-font-weight) !important;
                text-decoration: var(--shiki-dark-text-decoration) !important;
            }
        </style>
    </head>

    <body
        class="mx-4 mx-auto mb-40 mt-8 max-w-2xl antialiased"
    >
        <main class="mt-6 flex min-w-0 flex-auto flex-col px-2 md:px-0">
            <Navbar />
            <slot />
        </main>
    </body>
</html>
